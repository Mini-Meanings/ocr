      <view class="we-slide">
        <view class="item" @tap="upload(id)">
          <image lazy-load="true" src="../image/temp2.png" />
          <text class="title">身份证识别</text>
          <text class="desc">提供通用图片文字识别，快速高效。对文字图片进行识别。</text>
