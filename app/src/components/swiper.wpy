      <view class="we-slide">
        <view class="item" @tap="upload(drive)">
          <image lazy-load="true" src="../image/temp3.png" />
          <text class="title">驾驶证识别</text>
          <text class="desc">提供通用图片文字识别，快速高效。同时返回位置信息。</text>
