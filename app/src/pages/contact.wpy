        <textarea @input="getQuestion" value="{{question}}" placeholder-style="color:#fff;font-size:30rpx;" placeholder="" />
      </view>
      <view class="section">
        <view class="section__title">邮箱地址</view>
        <input @input="getContact" name="input" value="{{contact}}"/>
      </view>
      <view class="btns">
        <span @tap="submitInfo">提交</span>
        <span @tap="goback">返回</span>
      </view>
    </form>
