<template>
  <scroll-view class="contact">
    <view class="rmedge">
      <view class="temp"></view>
    </view>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <!-- <view class="section">
        <picker @change="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker">
            请选择问题类型：{{array[index]}}
          </view>
