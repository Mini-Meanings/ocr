.tags{display:flex;font-size:32rpx;justify-content:space-around;margin-top:60rpx;margin-bottom:50rpx;padding:0 15rpx}.tags .list{border:1px solid;padding:8rpx 30rpx;border-radius:40rpx;opacity:.6}.tags .ripple{position:relative;overflow:hidden}.tags .ripple:after{content:"";display:block;position:absolute;width:100%;height:100%;top:0;left:0;pointer-events:none;background-image:radial-gradient(circle, #666 10%, transparent 10.01%);background-repeat:no-repeat;background-position:50%;transform:scale(10, 10);opacity:0;transition:transform .4s,opacity .5s}.tags .ripple:active:after{transform:scale(0, 0);opacity:.3;transition:0s}